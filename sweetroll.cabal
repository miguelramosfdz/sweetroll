test-suite tests
    build-depends:
        base >= 4.8.0.0 && < 5
      , classy-prelude
      , transformers
      , string-conversions
      , errors
      , conduit-combinators
      , http-types
      , network-uri
      , case-insensitive
      , wai
      , wai-extra
      , warp
      , directory
      , gitson
      , bytestring
      , raw-strings-qq
      , lens
      , aeson
      , lens-aeson
      , aeson-qq
      , data-default
      , process
      , hspec
      , sweetroll
    default-language: Haskell2010
    ghc-options: -threaded -Wall
    hs-source-dirs: test-suite
    main-is: Spec.hs
    other-modules:
        Sweetroll.ApiSpec
        Sweetroll.Webmention.ReceiveSpec
        TestUtil
    type: exitcode-stdio-1.0
