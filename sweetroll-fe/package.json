{
  "name": "sweetroll-fe",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "deps": "mkdir -p bower_components; ln -s ../../indieweb-components bower_components/indieweb-components; bower update",
    "assets": "rm -rf dist.new; broccoli build dist.new && mkdir -p dist && rm -rf dist/* && mv dist.new/* dist/ && rmdir dist.new",
    "lint": "eslint --ignore-path .gitignore . && echo ESLint OK; stylelint assets/*.css && echo Stylelint OK; true",
    "fmt": "stylefmt assets/*.css",
    "devserve": "prok"
  },
  "processes": {
    "app": "DEBUG=*,-dynamic-asset-rev,-koa-mount LIVE_RELOAD=1 node-dev --harmony index.js",
    "lr": "DEBUG=tinylr:* tiny-lr",
    "re-asset": "chokidar 'assets/**/*' 'Brocfile.js' --initial -p -c 'npm run assets; curl -s -X POST \"localhost:35729/changed?files=dist\"; true'",
    "re-tpl": "chokidar 'views/**/*' -p -c 'curl -s -X POST \"localhost:35729/changed?files=dist\"; true'"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "bower": "^1.8.0",
    "broccoli": "^1.1.0",
    "broccoli-brotli": "^1.0.0",
    "broccoli-cli": "^1.0.0",
    "broccoli-concat": "^3.0.5",
    "broccoli-funnel": "^1.1.0",
    "broccoli-merge-trees": "^1.2.1",
    "broccoli-postcss": "^3.2.1",
    "broccoli-pug-render": "^1.0.4",
    "broccoli-source-map": "^0.2.4",
    "broccoli-svgstore": "^0.4.1",
    "broccoli-zopfli": "github:myfreeweb/broccoli-zopfli",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "make-livereload": "^0.1.2",
    "node-dev": "^3.1.3",
    "prok": "0.0.8",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "debug": "^2.6.1",
    "dotenv": "^4.0.0",
    "dynamic-asset-rev": "^0.1.0",
    "emoji-king": "^0.1.0",
    "gravatar-url": "^2.0.0",
    "koa": "^2.0.0",
    "koa-better-router": "^2.1.1",
    "koa-better-serve": "^1.0.0",
    "koa-cash": "github:joukosaastamoinen/cash#koa-2-support",
    "koa-compose": "^3.2.1",
    "koa-mount": "^2.0.0",
    "lodash": "^4.17.4",
    "lru-cache": "^4.0.2",
    "minimist": "^1.2.0",
    "moment": "^2.17.1",
    "pg": "^6.1.2",
    "pg-async": "^2.4.3",
    "pify": "^2.3.0",
    "promised-retry": "^0.2.3",
    "pug": "^2.0.0-beta11",
    "sse-broadcast": "^0.4.1",
    "urijs": "^1.18.7"
  }
}
